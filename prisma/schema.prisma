generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("SUPABASE_DIRECT_URL")
}

// NextAuth Models

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For Credentials provider
  accounts      Account[]
  sessions      Session[]
  projects      Project[] // Relation to projects
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Business Logic Models

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?  @db.Text
  industry    String?
  currency    String   @default("RUB")
  status      String   @default("active") // active, archived
  template    String   @default("custom") 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // JSON field to store AI chat history
  aiChatHistory Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  investments Investment[]
  revenues    Revenue[]
  expenses    Expense[]
  
  // Consultant relations
  transactions Transaction[]
  taxPayments  TaxPayment[]
  
  // New fields for business mode
  type        String   @default("model") // model, business
  taxSystem   String   @default("usn_6") // usn_6, usn_15, osv
  settings    Json?    // Business specific settings
}

model Investment {
  id        String  @id @default(cuid())
  projectId String
  category  String
  amount    Float

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Revenue {
  id            String  @id @default(cuid())
  projectId     String
  name          String
  monthlyAmount Float
  growthRate    Float   @default(0)
  type          String  @default("recurring") // recurring, one-time

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Expense {
  id            String  @id @default(cuid())
  projectId     String
  name          String
  monthlyAmount Float
  growthRate    Float   @default(0)
  type          String  @default("fixed") // fixed, variable

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// Business Consultant Models

model Transaction {
  id          String   @id @default(cuid())
  projectId   String
  date        DateTime
  amount      Float
  category    String
  description String?  @db.Text
  type        String   @default("expense") // income, expense
  status      String   @default("paid")    // planned, paid
  receiptUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model TaxPayment {
  id          String   @id @default(cuid())
  projectId   String
  dueDate     DateTime
  amount      Float
  status      String   @default("pending") // pending, paid, overdue
  period      String   // e.g., "Q1 2024", "2024"
  taxType     String   // e.g., "usn", "insurance"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
